<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:text="I AM POOR"
        android:textColor="#E4F1E9E9"
        android:textColorHighlight="#FCF5F0F0"
        android:textColorHint="#F5FFFFFF"
        android:textColorLink="#F8FFFFFF"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="261dp"
        android:layout_height="638dp"
        android:layout_alignBaseline="@id/textView"
        android:layout_alignLeft="@id/textView"
        android:layout_alignBottom="@id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="34dp"
        android:background="#00BCD4"
        app:srcCompat="@drawable/coal" />

</RelativeLayout>
